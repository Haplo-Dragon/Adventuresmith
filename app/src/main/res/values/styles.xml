<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <!-- ...and here we setting appcompatâ€™s color theme attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/colorPrimaryLightLight</item>
        <item name="material_drawer_primary_text">@color/grey900</item>
        <item name="material_drawer_secondary_text">@color/grey700</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/grey400</item>
        <item name="material_drawer_selected">@color/colorPrimaryLight</item>
        <item name="material_drawer_selected_text">@color/colorPrimaryDarkDark</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
